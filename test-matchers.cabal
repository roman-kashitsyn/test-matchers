name:                test-matchers
version:             0.1.0.0
synopsis:            Matcher combinators for unit testing.
-- description:
license:             Apache-2.0
license-file:        LICENSE
author:              Roman Kashitsyn
maintainer:          roman.kashitsyn@gmail.com
-- copyright:
category:            Testing
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

library
  exposed-modules:     Test.Matchers
                     , Test.Matchers.Simple
                     , Test.Matchers.Message
                     , Test.Matchers.Render
                     , Test.Matchers.HUnit

  build-depends:       base >=4.8 && <5
                     , prettyprinter >=1.1 && <2
                     , prettyprinter-ansi-terminal >=1.1 && <2
                     , HUnit >=1.5
                     , text >=1 && <2
                     , transformers >=0.4
                     , containers >=0.4
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite matchers-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base >=4.8 && <5
                     , test-matchers
                     , HUnit
                     , hspec
                     , hspec-core
  default-language:    Haskell2010
  