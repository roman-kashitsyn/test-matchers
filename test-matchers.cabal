library
  exposed-modules:     Test.Matchers
  build-depends:       base >=4.8 && <5
                     , pretty >=1.1 && <1.2
                     , HUnit >=1.5
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite matchers-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base >=4.8 && <5
                     , test-matchers
                     , hspec
                     , hspec-core
  default-language:    Haskell2010
  