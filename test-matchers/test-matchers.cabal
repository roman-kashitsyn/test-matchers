-- Initial test-matchers.cabal generated by cabal init.  For further
-- documentation, see http://haskell.org/cabal/users-guide/

name:                test-matchers
version:             0.1.0.0
synopsis:            Matcher combinators for unit testing.
-- description:
license:             Apache-2.0
author:              Roman Kashitsyn
maintainer:          roman.kashitsyn@gmail.com
copyright:           2018-2019 Google LLC
category:            Testing
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=2.0

library
  exposed-modules:     Test.Matchers
                     , Test.Matchers.Simple
                     , Test.Matchers.Message
                     , Test.Matchers.Render
                     , Test.Matchers.LexShow
                     , Test.Matchers.PrettyShow
  other-modules:       RStateMonad
                     , RefAbbrev
                     , Machines

  build-depends:       base >=4.11 && <5
                     , containers >=0.4
                     , internals
                     , prettyprinter >=1.1 && <2
                     , prettyprinter-ansi-terminal >=1.1 && <2
                     , text >=1 && <2
  hs-source-dirs:      src
  ghc-options:         -Wall
  default-language:    Haskell2010

library internals
  exposed-modules:     RStateMonad
                     , Machines
  build-depends:       base >=4.11 && <5
                     , text >=1 && <2
  hs-source-dirs:      src
  ghc-options:         -Wall
  default-language:    Haskell2010

benchmark bench-machines
  type:             exitcode-stdio-1.0
  hs-source-dirs:   bench
  main-is:          BenchMachines.hs
  build-depends:    base
                  , internals
                  , deepseq
                  , gauge
                  , text
  ghc-options:      -O2
